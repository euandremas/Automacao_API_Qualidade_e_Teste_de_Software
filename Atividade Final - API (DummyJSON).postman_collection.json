					"script": {
						"exec": [
							"// Visualization Script",
							"// Visualization Script",
							"// Visualizer script to render product metrics",
							"var template = `",
							"<div style=\"max-width: 720px; margin: 0 auto;\">",
							"  <canvas id=\"productChart\" height=\"120\"></canvas>",
							"</div>",
							"<script src=\"https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js\"></script>",
							"<script>",
							"  (function(){",
							"    var ctx = document.getElementById('productChart').getContext('2d');",
							"    pm.getData(function (err, data) {",
							"      if (err) {",
							"        return;",
							"      }",
							"      var values = (data && data.response) ? data.response : {};",
							"      var labels = ['Price','Rating','Stock'];",
							"      var dataset = [values.price || 0, values.rating || 0, values.stock || 0];",
							"      var title = values.title || 'Product Metrics';",
							"",
							"      new Chart(ctx, {",
							"        type: 'bar',",
							"        data: {",
							"          labels: labels,",
							"          datasets: [{",
							"            label: title,",
							"            backgroundColor: ['#4e79a7','#f28e2b','#e15759'],",
							"            borderColor: ['#3b5f86','#bf6d14','#b0433f'],",
							"            borderWidth: 1,",
							"            data: dataset",
							"          }]",
							"        },",
							"        options: {",
							"          responsive: true,",
							"          maintainAspectRatio: false,",
							"          legend: { display: false },",
							"          title: { display: true, text: title },",
							"          scales: {",
							"            yAxes: [{ ticks: { beginAtZero: true } }]",
							"          }",
							"        }",
							"      });",
							"    });",
							"  })();",
							"</script>",
							"`;",
							"",
							"function createPayload() {",
							"  // 1) Parse response JSON",
							"  var json = pm.response.json();",
							"  // 2) Extract product fields (ensure shape compatibility)",
							"  var payload = {",
							"    title: json && json.title ? json.title : 'Product Metrics',",
							"    price: (json && typeof json.price === 'number') ? json.price : 0,",
							"    rating: (json && typeof json.rating === 'number') ? json.rating : 0,",
							"    stock: (json && typeof json.stock === 'number') ? json.stock : 0",
							"  };",
							"  return { response: payload };",
							"}",
							"",
							"// 5) Set the visualizer with template and data payload",
							"pm.visualizer.set(template, createPayload());"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
